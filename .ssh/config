# For hosts from known domains and IP subnets, don't check the key and don't add the hostkey to known_hosts
# Link: https://superuser.com/questions/141344/dont-add-hostkey-to-known-hosts-for-ssh/433621#433621

Host *.lab.example.com
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host 192.168.140.*
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host *.mycluster.example.com
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  User core

Host 192.168.150.*
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  User core

Host *.opentlc.com
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null

Host api.crc.testing
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  User core

# Useful while building CodeReady Containers
# https://github.com/code-ready/snc#troubleshooting

# CRC bootstrap
Host 192.168.126.10
    User core
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null

# CRC master
Host 192.168.126.11
    User core
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
