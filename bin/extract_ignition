#!/bin/bash

# Extract files embedded in the CoreOS ignition file and MachineConfig file to the local directory

set -euo pipefail

if [ "$#" -lt 1 ]; then
  echo $0: \<IGNITION_FILE\>...
  exit 1
fi

ignition_file=$1
target_dir=$1.extract

storage_dir=$target_dir/storage

function urldecode() {
    # urldecode <string>
    local url_encoded="${1//+/ }"
    printf '%b' "${url_encoded//%/\\x}"
}

cat $ignition_file | jq -r '.storage.files[]?, .spec.config.storage.files[]?| .path, .contents.source' | while read name; do
  read content
  mkdir -p $(dirname ${storage_dir}${name})
  encoding=$(echo "$content" | cut -d ',' -f 1)
  encoded_content=$(echo "$content" | cut -d ',' -f 2)
  case "$encoding" in
    "data:text/plain;charset=utf-8;base64" | "data:text/plain;base64")
      # base64 encoded content
      echo $encoded_content | base64 -d > ${storage_dir}${name}
      ;;
    "data:" | "data:text/plain")
      # url-encoded content
      urldecode "$encoded_content" > ${storage_dir}${name}
      ;;
    *)
      echo Error, don\'t know how to decode the content: "$content"
      ;;
  esac
done

systemd_dir=$target_dir/systemd
units_dir=$systemd_dir/etc/systemd/system
enabled_units_dir=$units_dir/multi-user.target.wants

mkdir -p $enabled_units_dir

cat $ignition_file | jq '.systemd.units[]?, .spec.config.systemd.units[]? | .contents, .enabled, .name' | while read -r contents; do
  read enabled
  read name
  unit_name=$(echo $name | jq -r)
  echo $contents | jq -r > $units_dir/$unit_name
  if [ "$enabled" = true ]; then
    touch $enabled_units_dir/$unit_name
  fi
done
