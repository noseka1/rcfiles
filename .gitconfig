[user]
        name = Ales Nosek
        email = ales.nosek@gmail.com
[color]
        ui = auto
[merge]
        tool = vimdiff
        stat = true
        conflictstyle = diff3
[diff]
        mnemonicprefix = true
        tool = vimdiff
[alias]
        l  = log --pretty=format:'%C(yellow)%h%C(reset)%C(bold yellow)%d%C(reset) %C(green)%an%C(reset) %C(bold blue)%ad%C(reset) %s'
        l2 = log --pretty=format:'%C(yellow)%h%C(reset)%C(bold yellow)%d%C(reset) %C(green)%an%C(reset) %C(bold blue)%ar%C(reset) %s'
        lg  = log --pretty=format:'%C(yellow)%h%C(reset)%C(bold yellow)%d%C(reset) %C(green)%an%C(reset) %C(bold blue)%ad%C(reset) %s' --graph
        lg2 = log --pretty=format:'%C(yellow)%h%C(reset)%C(bold yellow)%d%C(reset) %C(green)%an%C(reset) %C(bold blue)%ar%C(reset) %s' --graph
        co = checkout
        b  = branch
        c  = commit
        s  = status
        st = status -sb
        dc = diff --cached
        dcw = diff --cached --color-words
        d = diff
        dw = diff --color-words
        amend = commit -C HEAD -a --amend
[git-p4]
        skipsubmitedit = true
        skipsubmiteditcheck = true
[init]
        templatedir = ~/.git.template
[push]
        default = current
[credential]
        helper = cache --timeout 43200
[core]
        excludesfile = ~/.gitignore.global
[difftool]
        prompt = false
[mergetool]
        prompt = false
[pull]
        ff = only
